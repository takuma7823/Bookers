<header>
	<h1 class="index-headline">Books</h1>
</header>
<table>
	<thead>
    	<tr>
			<th>title</th>
			<th>body</th>
		</tr>
	</thead>
	<tbody>
		<%  @books.each do |book|  %>
			<tr>
				<td><%=  book.title  %></td>
				<td><%=  book.body  %></td>
				<td><%= link_to 'Show', book %></td>
        		<td><%= link_to 'Edit', edit_book_path(book) %></td>
        		<td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<%  end  %>
	</tbody>
</table>
<div class="newbook">
	<h1 class="newbook-headline">New Book</h1>
	<%=  form_for(@book) do |f|  %>
		<%=  flash[:notice]  %>
	    <h4>title</h4>
	    <%= f.text_field :title %>
	    <h4 class="newbook-body">body</h4>
	    <%= f.text_area :body %><br>
	    <%= f.submit 'Create book' %>
	<% end %>
</div>